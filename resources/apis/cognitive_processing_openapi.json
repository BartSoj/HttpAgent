{
  "openapi": "3.0.0",
  "info": {
    "title": "Context, Memory, and Schedule API",
    "description": "API for managing context, memory, and schedules.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8001",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/context": {
      "get": {
        "summary": "Retrieve context data.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "context": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/memory": {
      "post": {
        "summary": "Save memory for later use in the conversation.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "memory": {
                    "type": "string",
                    "description": "The memory to save. It should be a short string with something that can be used later in the conversation."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Retrieve saved memory.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "memory": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/schedule": {
      "post": {
        "summary": "Add a schedule to invoke the assistant at a specific time with specific content. Can be used to schedule a reminder, notification, set a timer, alarm or any other time-based action.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "datetime": {
                    "type": "string",
                    "format": "date-time",
                    "description": "The date and time when the assistant should be invoked. The date and time should be in ISO 8601 format. For example, 2024-08-20T16:33:14Z."
                  },
                  "content": {
                    "type": "string",
                    "description": "The content that should be sent to the assistant when it is invoked. It can inform the assistant about the action to be performed, the reminder message, the notification message, etc."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}